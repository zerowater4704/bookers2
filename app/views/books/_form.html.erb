<h1>New book</h1>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_field :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>