<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% @users.each do |user|  %>
        <% if user == current_user %>
          <%= render "books/user", user: user %>
        <% end %>
      <% end %>

      <%= render "books/form", book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>